{
  "printWidth": 80,             // Maximum line width
  "tabWidth": 4,                // Number of spaces per indentation level
  "useTabs": false,             // Use spaces instead of tabs
  "semi": true,                 // Add semicolons at the end of statements
  "singleQuote": true,          // Use single quotes for strings
  "quoteProps": "as-needed",    // Only quote object properties as needed
  "jsxSingleQuote": false,      // Use double quotes for JSX attributes
  "trailingComma": "es5",      // Add trailing commas where valid in ES5
  "bracketSpacing": true,       // Add spaces inside of object literals
  "jsxBracketSameLine": false,  // Place the > of a multi-line JSX element at the end of the last line
  "arrowParens": "avoid",      // Omit parentheses around single arguments in arrow functions
  "endOfLine": "auto",         // Use the OS-specific line-ending style
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 200      // Increase line width for JSON files
      }
    }
  ]
}

